import fs from 'fs';
import path from 'path';

export default function handler(req, res) {
  const quotesDir = path.join(process.cwd(), 'data_storage/quotes');

  try {
    if (!fs.existsSync(quotesDir)) {
      return res.status(200).json({ quotes: [] });
    }

    // قراءة جميع الملفات في مجلد quotes
    const files = fs.readdirSync(quotesDir);
    
    const quotesData = files.map(file => {
      const filePath = path.join(quotesDir, file);
      const content = fs.readFileSync(filePath, 'utf8');
      return JSON.parse(content); // قراءة محتوى ملف الـ TXT
    });

    // ترتيب العروض من الأحدث للأقدم
    quotesData.sort((a, b) => b.quoteNumber - a.quoteNumber);

    res.status(200).json({ quotes: quotesData });
  } catch (error) {
    res.status(500).json({ error: "Failed to load quotes" });
  }
}